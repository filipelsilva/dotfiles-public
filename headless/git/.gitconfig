[alias]
	ac = "!git add --all && git commit --verbose --verbose"
	br = "branch --all --verbose --verbose"
	cm = "commit"
	co = "checkout"
	df = "diff"
	dfs = "diff --staged"
	dt = "difftool"
	dts = "difftool --staged"
	mg = "merge"
	mt = "mergetool"
	st = "status"
	tree = "log --graph --oneline --decorate --all"

[core]
	autocrlf = input

[pager]
	log =  diff-highlight | less
	show = diff-highlight | less
	diff = diff-highlight | less

[help]
	autocorrect = 30

[init]
	defaultBranch = main

[pull]
	rebase = false

[rerere]
	enabled = true

[diff]
	colorMoved = zebra
	tool = vimdiff
[difftool]
	prompt = false
[difftool "vimdiff"]
	cmd = vim -d "$LOCAL" "$REMOTE"

[merge]
	tool = vimdiff
[mergetool]
	prompt = true
[mergetool "vimdiff"]
	cmd = vim -d "$LOCAL" "$REMOTE" "$MERGED" -c '$wincmd w' -c 'wincmd J'

[include]
	path = .gitconfig.user
